<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/actionbar_orange"
    android:clipToPadding="false"
    android:fitsSystemWindows="true"
    tools:context="com.example.sitting_room.pebbletophone.MainActivity" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#FFFFFF" >

        <TextView
            android:id="@+id/install_watchapp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="1. Install Watchapp"
            android:textColor="#AAAAAA"
            android:textSize="25sp" />

        <Button
            android:id="@+id/button_install"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/install_watchapp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@color/actionbar_orange"
            android:text="INSTALL"
            android:textColor="#FFFFFF" />

    </RelativeLayout>

</LinearLayout>