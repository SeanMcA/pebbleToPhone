<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/actionbar_orange"
    android:clipToPadding="false"
    android:fitsSystemWindows="true"
    tools:context="com.example.sitting_room.pebbletophone.MainActivity" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#FFFFFF" >



        <Button
            android:text="Clear file contents"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:background="@color/actionbar_orange"
            android:textColor="#FFFFFF"
            android:onClick="clearFileContents"
            android:id="@+id/ClearFileContents" />

        <Button
            android:id="@+id/startButton"
            android:layout_below="@id/ClearFileContents"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:background="@color/actionbar_orange"
            android:textColor="#FFFFFF"
            android:onClick="startService"
            android:text="Start Service" />

        <Button
            android:id="@+id/stopButton"
            android:layout_below="@id/startButton"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:background="@color/actionbar_orange"
            android:textColor="#FFFFFF"
            android:onClick="stopService"
            android:text="Stop Service" />

    </RelativeLayout>

</LinearLayout>